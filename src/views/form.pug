extends template

block title
  | Форма

block content
  .wrapper
    section.section-form
      .container-order
        .section-title Форма регистрации
        form(action="server.php" method="post").order#order-form
          .order__form            
            .order__form-row
              label.order__form-block
                .order__form-label.lock Фамилия ребенка
                .order__form-sublabel Обязательно для заполнения
                input(type="text" name="surname" placeholder="Ваш ответ" required).order__form-input
            .order__form-row
              label.order__form-block
                .order__form-label.lock Имя ребенка
                .order__form-sublabel Обязательно для заполнения
                input(type="text" name="name" placeholder="Ваш ответ" required).order__form-input
            .order__form-row
              label.order__form-block
                .order__form-label.lock Отчество ребенка
                .order__form-sublabel Обязательно для заполнения
                input(type="text" name="lastname" placeholder="Ваш ответ" required).order__form-input   
            .order__form-row
              label.order__form-block
                .order__form-label.lock Дата рождения
                .order__form-sublabel Обязательно для заполнения
                input(type="date" name="birthday" placeholder="Ваш ответ" required).order__form-input  
            .order__form-row
              label.order__form-block
                .order__form-label.lock Контактный телефон
                .order__form-sublabel Телефон в формате 2ххх-ххх
                input(type="tel" name="tel" placeholder="Ваш ответ" required pattern="2[0-9]{3}-[0-9]{3}").order__form-input 
            .order__form-row
              label.order__form-block
                .order__form-label.lock Отчество ребенка
                .order__form-sublabel Обязательно для заполнения
                select(name="group")
                  option(value="none")
                  option(value="upperschool") Дошкольник (5-6 лет)
                  option(value="school") Школьник (7-17 лет)     
            .order__form-row.order__form-row_btn
              .order__order-row_btn
                input(type="submit" value="next").order__form-button    

                